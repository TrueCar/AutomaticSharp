@using System.Linq
@using System.Security.Claims

@if (User.Identities.Any(i => i.IsAuthenticated))
{
    <form asp-controller="Home" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
        <span class="navbar-text">Hello @User.FindFirst(c => c.Type == ClaimTypes.GivenName).Value!</span>
        <button type="submit" class="btn btn-link">Log off</button>
    </form>
}
else
{
    <form asp-controller="Home" asp-action="Login" method="post" class="form-inline" role="form">
        <button type="submit" class="btn btn-default navbar-btn btn-automatic">&nbsp;</button>
    </form>
}
