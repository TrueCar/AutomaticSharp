@using System.Linq
@using System.Security.Claims
@using AutomaticSharp.Auth

@if (User.Identities.Any(i => i.IsAuthenticated))
{
    <form asp-controller="Home" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li><p class="navbar-text">Hello @User.FindFirst(c=>c.Type== ClaimTypes.GivenName).Value!</p></li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <form asp-controller="Home" asp-action="Login" method="post" class="form-horizontal" role="form">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-default navbar-btn btn-automatic">&nbsp;</button>
            </li>
        </ul>
    </form>
}
